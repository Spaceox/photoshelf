{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build debug",
            "type": "shell",
            "command": "nim c -d:useBranchFree64 --out:shelfrog_debug.exe shelfrog.nim",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build release",
            "type": "shell",
            "command": "nim c -d:release --passC:-flto --passL:-flto --opt:speed --gc:orc -d:useBranchFree64 shelfrog.nim",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build release (native)",
            "type": "shell",
            "command": "nim c -d:release --passC:-flto --passL:-flto --opt:speed --gc:orc -d:useBranchFree64 --passC:-march=native --out:shelfrog_native.exe shelfrog.nim ",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}